    <script>
        function saveLocally() {
            const cookie = document.getElementById('cookieInput').value.trim();
            
            if (!cookie) {
                alert('–í—Å—Ç–∞–≤—å –∫—É–∫–∏ –≤ –ø–æ–ª–µ –≤—ã—à–µ!');
                return;
            }
            
            if (!cookie.includes('.ROBLOSECURITY')) {
                alert('–≠—Ç–æ –Ω–µ –ø–æ—Ö–æ–∂–µ –Ω–∞ –∫—É–∫–∏ Roblox!');
                return;
            }
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage —Ç–µ–ª–µ—Ñ–æ–Ω–∞
            try {
                // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–ª—É—á–∞–π–Ω—ã–π ID –¥–ª—è —ç—Ç–æ–≥–æ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞
                const deviceId = 'device_' + Math.random().toString(36).substr(2, 9);
                const data = {
                    cookie: cookie,
                    timestamp: new Date().toISOString(),
                    device: navigator.userAgent,
                    location: 'saved_locally'
                };
                
                localStorage.setItem('roblox_cookie_' + deviceId, JSON.stringify(data));
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É—Å–ø–µ—Ö
                document.getElementById('successMessage').style.display = 'block';
                document.getElementById('cookieInput').value = '';
                
                // –ß–µ—Ä–µ–∑ 5 —Å–µ–∫—É–Ω–¥ —Å–∫—Ä—ã–≤–∞–µ–º
                setTimeout(() => {
                    document.getElementById('successMessage').style.display = 'none';
                }, 5000);
                
            } catch (e) {
                alert('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è: ' + e.message);
            }
        }
        
        function showQR() {
            const qrSection = document.getElementById('qrSection');
            if (qrSection.style.display === 'none') {
                qrSection.style.display = 'block';
                
                // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º QR-–∫–æ–¥ —Å —Ç–µ–∫—É—â–∏–º URL (–Ω–∏–∫–∞–∫–∏—Ö –¥–∞–Ω–Ω—ã—Ö –Ω–µ –ø–µ—Ä–µ–¥–∞–µ–º)
                QRCode.toCanvas(document.getElementById('qrcode'), 
                    window.location.href, 
                    { width: 200, height: 200 },
                    function(error) {
                        if (error) console.error(error);
                    }
                );
            } else {
                qrSection.style.display = 'none';
            }
        }
        
        // –ê–≤—Ç–æ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–π –¥–ª—è —Ä–∞–∑–Ω—ã—Ö –û–°
        window.onload = function() {
            const isIOS = /iPhone|iPad|iPod/.test(navigator.userAgent);
            const isAndroid = /Android/.test(navigator.userAgent);
            
            let instructions = '';
            
            if (isIOS) {
                instructions = `
                    <strong>–î–ª—è iPhone:</strong>
                    <ol>
                        <li>–û—Ç–∫—Ä–æ–π Safari</li>
                        <li>–ó–∞–π–¥–∏ –Ω–∞ —Å–∞–π—Ç Roblox.com</li>
                        <li>–ù–∞–∂–º–∏ "–ü–æ–¥–µ–ª–∏—Ç—å—Å—è"</li>
                        <li>–í—ã–±–µ—Ä–∏ "–ù–∞—Å—Ç—Ä–æ–π–∫–∏"</li>
                        <li>–í–∫–ª—é—á–∏ "–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫"</li>
                        <li>–í–µ—Ä–Ω–∏—Å—å –Ω–∞ —Å–∞–π—Ç ‚Üí "–ü–æ–¥–µ–ª–∏—Ç—å—Å—è" ‚Üí "–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫"</li>
                    </ol>
                `;
            } else if (isAndroid) {
                instructions = `
                    <strong>–î–ª—è Android:</strong>
                    <ol>
                        <li>–û—Ç–∫—Ä–æ–π Chrome</li>
                        <li>–í–≤–µ–¥–∏ –≤ –∞–¥—Ä–µ—Å–Ω—É—é —Å—Ç—Ä–æ–∫—É: <code>chrome://inspect</code></li>
                        <li>–ù–∞–∂–º–∏ –Ω–∞ —Å–∞–π—Ç roblox.com</li>
                        <li>–í—ã–±–µ—Ä–∏ –≤–∫–ª–∞–¥–∫—É "Application"</li>
                        <li>–ù–∞–π–¥–∏ "Cookies" ‚Üí "https://www.roblox.com"</li>
                    </ol>
                `;
            }
            
            if (instructions) {
                document.querySelector('.step:nth-child(3)').innerHTML += instructions;
            }
        }
        
        // –î–æ–±–∞–≤–ª—è–µ–º –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ –ø—Ä–∏ –∑–∞–∫—Ä—ã—Ç–∏–∏
        window.onbeforeunload = function() {
            return '–£–±–µ–¥–∏—Å—å, —á—Ç–æ —Å–æ—Ö—Ä–∞–Ω–∏–ª –∫—É–∫–∏!';
        };
    </script>
